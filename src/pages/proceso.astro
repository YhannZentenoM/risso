---
import Footer from "../components/web/Footer.astro";
import HeaderService from "../components/web/HeaderService.astro";
import Navbar from "../components/web/Navbar.astro";
import TitlePage from "../components/web/TitlePage.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Proceso Pago">
    <Navbar />
    <HeaderService title="" image="/images/facial-slider.png" />
    <section class="py-10 container mx-auto">
        <TitlePage title="Proceso de Pago" description="" />
        <div class="flex gap-10">
            <div class="w-full md:w-2/3">
                <h3 class="text-2xl mb-3">Datos de contacto</h3>
                <form action="" class="flex flex-col gap-y-4">
                    <input
                        type="text"
                        class="bg-gray-50 border border-gray-300 text-gray-900 text-base rounded-lg focus:ring-blue-300 focus:border-blue-500 block p-2.5 w-full"
                        placeholder="Nombres y apellidos"
                    />
                    <input
                        type="text"
                        class="bg-gray-50 border border-gray-300 text-gray-900 text-base rounded-lg focus:ring-blue-300 focus:border-blue-500 block p-2.5 w-full"
                        placeholder="Dirección"
                    />
                    <div class="flex flex-col md:flex-row gap-4">
                        <input
                            type="text"
                            class="bg-gray-50 border border-gray-300 text-gray-900 text-base rounded-lg focus:ring-blue-300 focus:border-blue-500 block p-2.5 w-full"
                            placeholder="Teléfono"
                        />
                        <input
                            type="text"
                            class="bg-gray-50 border border-gray-300 text-gray-900 text-base rounded-lg focus:ring-blue-300 focus:border-blue-500 block p-2.5 w-full"
                            placeholder="Correo electrónico"
                        />
                    </div>
                    <input
                        type="text"
                        class="bg-gray-50 border border-gray-300 text-gray-900 text-base rounded-lg focus:ring-blue-300 focus:border-blue-500 block p-2.5 w-full"
                        placeholder="Número de operación"
                    />
                    <textarea
                        name=""
                        class="bg-gray-50 border border-gray-300 text-gray-900 text-base rounded-lg focus:ring-blue-300 focus:border-blue-500 block p-2.5 w-full"
                        rows="5"
                        placeholder="Datos adicionales"></textarea>
                </form>
            </div>
            <div class="w-full md:w-1/3">
                <h3 class="text-2xl mb-3">Métodos de pago</h3>

                <div id="accordion-collapse" data-accordion="collapse">
                    <h2 id="accordion-collapse-heading-1">
                        <button
                            type="button"
                            class="flex items-center justify-between w-full p-5 font-medium text-left text-gray-500 border border-b-0 border-gray-200 rounded-t-xl focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-800 dark:border-gray-700 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800"
                            data-accordion-target="#accordion-collapse-body-1"
                            aria-expanded="true"
                            aria-controls="accordion-collapse-body-1"
                        >
                            <span>Pago mediante YAPE</span>
                            <svg
                                data-accordion-icon
                                class="w-6 h-6 rotate-180 shrink-0"
                                fill="currentColor"
                                viewBox="0 0 20 20"
                                xmlns="http://www.w3.org/2000/svg"
                                ><path
                                    fill-rule="evenodd"
                                    d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                                    clip-rule="evenodd"></path></svg
                            >
                        </button>
                    </h2>
                    <div
                        id="accordion-collapse-body-1"
                        class="hidden"
                        aria-labelledby="accordion-collapse-heading-1"
                    >
                        <div
                            class="border border-b-0 border-gray-200 dark:border-gray-700 dark:bg-gray-900 p-5"
                        >
                            <img
                                src="https://neuropista.files.wordpress.com/2020/07/3x5-imagen-pagos-002-1.png?w=1000"
                                class="w-full"
                                alt="Yape"
                            />
                        </div>
                    </div>
                    <h2 id="accordion-collapse-heading-2">
                        <button
                            type="button"
                            class="flex items-center justify-between w-full p-5 font-medium text-left text-gray-500 border border-b-0 border-gray-200 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-800 dark:border-gray-700 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800"
                            data-accordion-target="#accordion-collapse-body-2"
                            aria-expanded="false"
                            aria-controls="accordion-collapse-body-2"
                        >
                            <span>Pago mediante transferencia</span>
                            <svg
                                data-accordion-icon
                                class="w-6 h-6 shrink-0"
                                fill="currentColor"
                                viewBox="0 0 20 20"
                                xmlns="http://www.w3.org/2000/svg"
                                ><path
                                    fill-rule="evenodd"
                                    d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                                    clip-rule="evenodd"></path></svg
                            >
                        </button>
                    </h2>
                    <div
                        id="accordion-collapse-body-2"
                        class="hidden"
                        aria-labelledby="accordion-collapse-heading-2"
                    >
                        <div
                            class="p-5 border border-b-0 border-gray-200 dark:border-gray-700"
                        >
                            <p class="mb-2 text-gray-500 dark:text-gray-400">
                                BCP:<br />
                                Cuenta: 023-72342364289234-213<br />
                                CCI: 023-72342364289234-213
                            </p>
                            <p class="text-gray-500 dark:text-gray-400">
                                Interbank:<br />
                                Cuenta: 023-72342364289234-213<br />
                                CCI: 023-72342364289234-213
                            </p>
                        </div>
                    </div>
                </div>
                <button
                    id="btn-process-pay"
                    type="button"
                    class="bg-risso w-full py-3 rounded-3xl text-white font-bold tracking-widest mt-5"
                    >Realizar pedido</button
                >
            </div>
        </div>
    </section>
    <Footer />
</Layout>
