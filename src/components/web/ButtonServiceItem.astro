---
import { Icon } from "astro-icon";

interface Props {
    title: string;
}
const { title } = Astro.props;
---

<div class="w-1/3">
    <a
        href="#booking-date"
        type="button"
        class="bg-risso py-20 w-full text-white flex justify-center items-center gap-x-4"
    >
        {title}
        <Icon name="teenyicons:arrow-right-solid" class="w-8 text-white" />
    </a>
</div>
