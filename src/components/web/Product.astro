---
interface Props {
    name: string;
    image: string;
    price: number;
}
const { name, image, price } = Astro.props;
---

<div
    class="flex flex-col items-center justify-center gap-4 border border-blue-200 p-4 h-full max-w-[350px] md:max-w-[300px] text-center"
>
    <img src={`/images/shop/${image}`} class="w-full min-w-[250px]" alt={`${name}`} />
    <h3 class="font-bold text-[16px] uppercase">{name}</h3>
    <span>S/ { price.toFixed(2) }</span>
    <button
        type="button"
        class="bg-risso p-3 rounded-3xl text-white font-bold tracking-wider item-product"
        data-name={`${name}`}
        data-price={`${price}`}>Agregar al carrito</button
    >
</div>
