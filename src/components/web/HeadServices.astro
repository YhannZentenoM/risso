---
interface Props {
    title: string;
    paragraph: string;
    image: string;
}
const { title } = Astro.props;
const { paragraph } = Astro.props;
const { image } = Astro.props;
---

<div class="container mx-auto flex flex-col md:flex-row items-center -mt-44">
    <div class="w-full md:w-1/3 p-3">
        <img src={`${image}`} alt="" />
    </div>
    <div class="w-full md:w-2/3 p-10 mt-3 md:mt-20 text-center md:text-left">
        <h3 class="text-3xl md:text-4xl mb-8">{title}</h3>
        <p class="text-1xl leading-7 italic">{paragraph}</p>
    </div>
</div>
